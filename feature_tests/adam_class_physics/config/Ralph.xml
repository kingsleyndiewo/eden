<!-- Actor configuration for Ralph -->
<actor>
    <!-- The values under each section should be in the format
            <value valueName="Item">String value of item</value>
            <fvalue valueName="Item">Float value of item</fvalue>
            <ivalue valueName="Item">Integer value of item</ivalue>
    -->
    <section Name="Resources">
        <!-- Actor loadables section -->
        <subsection Name="Main">
            <!-- Everything except the animations -->
            <value valueName="model">ralph.egg.pz</value>
            <value valueName="name">Ralph</value>
            <!-- Actor scaling -->
            <fvalue valueName="scaleX">0.75</fvalue>
            <fvalue valueName="scaleY">0.75</fvalue>
            <fvalue valueName="scaleZ">0.75</fvalue>
            <fvalue valueName="sphereFactor">0.4</fvalue>
        </subsection>
        <subsection Name="Animations">
            <!-- The animations only -->
            <value valueName="run">ralph_run.egg.pz</value>
            <value valueName="walk">ralph_walk.egg.pz</value>
        </subsection>
    </section>
    <section Name="Setup">
        <!-- Actor setup section -->
        <value valueName="defaultAnimation">walk</value>
        <ivalue valueName="defaultPose">2</ivalue>
        <!-- Initial position of actor in world -->
        <fvalue valueName="positionX">0.0</fvalue>
        <fvalue valueName="positionY">0.0</fvalue>
        <fvalue valueName="positionZ">0.0</fvalue>
        <!-- Camera distance from the actor; for actors who
             will be tracked by camera -->
        <ivalue valueName="isTracked">1</ivalue>
        <ivalue valueName="cameraX">15</ivalue>
        <ivalue valueName="cameraY">15</ivalue>
        <ivalue valueName="cameraZ">25</ivalue>
        <!-- Other useful parameters -->
        <ivalue valueName="speed">4</ivalue>
        <ivalue valueName="heading">180</ivalue>
        <ivalue valueName="actorType">0</ivalue>
        <ivalue valueName="collider">2</ivalue>
        <!-- For the terrain detection system -->
        <ivalue valueName="detectTerrain">1</ivalue>
        <!-- For the physics system -->
        <ivalue valueName="enablePhysics">1</ivalue>
        <fvalue valueName="mass">65.0</fvalue>
    </section>
</actor>